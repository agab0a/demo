<Window x:Class="Chua_De_07.Manhinh2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chua_De_07"
        mc:Ignorable="d"
        Title="Manhinh2" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid Margin="68,52,68,87" AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightPink"
                  Name="dgThuoc">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Danh Muc" Binding="{Binding MaDm}"></DataGridTextColumn>
                <DataGridTextColumn Header="Tên Danh Muc" Binding="{Binding TenDm}"></DataGridTextColumn>
                <DataGridTextColumn Header="Tổng tiền của danh muc sản phẩm thuốc" Binding="{Binding Tong}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
